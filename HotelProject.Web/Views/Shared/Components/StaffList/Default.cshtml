@model List<ResultStaffDto>
@using HotelProject.Web.Helpers
@{
    Layout = null;
    var delaysayac = 0.1; 
}

<div class="container-fluid py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Ekibimiz</h6>
            <h1 class="mb-5">Ekibimizi <span class="text-primary text-uppercase">Keşfedin</span></h1>
        </div>
        <div class="row g-4">
            @foreach(var item in Model)
            {
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="@delaysayac.ToString()s">
                <div class="rounded shadow overflow-hidden">
                    <div class="position-relative">
                            <img class="img-fluid" src="@MyHelper.DefaultImage(item.ImageUrl)" alt="">
                        <div class="position-absolute start-50 top-100 translate-middle d-flex align-items-center">
                                <a class="btn btn-square btn-primary mx-1" href="https://tr-tr.facebook.com/{@item.SocialMedia1}"><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-square btn-primary mx-1" href="https://twitter.com/{@item.SocialMedia3}"><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-square btn-primary mx-1" href="https://instagram.com/{@item.SocialMedia2}"><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                    <div class="text-center p-4 mt-3">
                        <h5 class="fw-bold mb-0">@item.Name</h5>
                        <small>@item.Title</small>
                    </div>
                </div>
            </div>
                delaysayac += 0.2;
            }
        </div>
    </div>
</div>