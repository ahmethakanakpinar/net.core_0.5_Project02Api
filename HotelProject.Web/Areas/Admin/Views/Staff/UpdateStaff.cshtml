@model UpdateStaffDto
@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="form-validation">
                    <form class="form-valide" method="post">
                        <input type="hidden" asp-for="StaffID">
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="Name">
                                Ad Soyad <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Adınızı Soyadınızı Giriniz">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="Title">
                                Görevi <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="Title" asp-for="Title" placeholder="Göreviniz">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="SocialMedia1">
                                Facebook Adresi <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="SocialMedia1" asp-for="SocialMedia1" placeholder="Facebook Adresiniz">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="SocialMedia2">
                                Instagram Adresi <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="SocialMedia2" asp-for="SocialMedia2" placeholder="Instagram Adresiniz">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="SocialMedia3">
                                X Adresi <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="SocialMedia3" asp-for="SocialMedia3" placeholder="X Adresiniz">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="ImageUrl">
                                Image Url <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl" placeholder="Image Url">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-8 ml-auto">
                                <button type="submit" class="btn btn-primary">Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section ExtraScripts {
    <script src="~/adminweb/plugins/validation/jquery.validate.min.js"></script>
    <script src="~/adminweb/plugins/validation/jquery.validate-init.js"></script>
}

