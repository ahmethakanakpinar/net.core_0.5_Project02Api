@model List<ResultStaffDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Ekip</h4>
                <div class="table-responsive">
                    <table class="table header-border">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Adı</th>
                                <th>Görevi</th>
                                <th>Facebook</th>
                                <th>Instagram</th>
                                <th>X</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img class="rounded-circle" src="~/adminweb/images/avatar/1.jpg" alt="">
                                    </td>
                                    <td>@item.Name</td>
                                    <td>
                                        <span class="text-muted">@item.Title</span>
                                    </td>
                                    <td>
                                        <span class="label gradient-4 rounded">@item.SocialMedia1</span>
                                    </td>
                                    <td>
                                        <span class="label gradient-5 rounded">@item.SocialMedia2</span>
                                    </td>
                                    <td>
                                        <span class="label rounded">@item.SocialMedia3</span>
                                    </td>
                                    <td>
                                        <a href="/Admin/Staff/DeleteStaff/@item.StaffID" class="btn mb-1 btn-rounded btn-danger">Sil</a>
                                        <a href="/Admin/Staff/UpdateStaff/@item.StaffID" class="btn mb-1 btn-rounded btn-dark">Düzenle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/Staff/AddStaff/" class="btn btn-info">Yeni Personel Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>