@model CreateServiceDto
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="form-validation">
                    <form class="form-valide" method="post">
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="Title">
                                Hizmet Başlığı <span asp-validation-for="Title" class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="Title" name="Title" placeholder="Hizmet Başlığı Giriniz">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="Description">
                                Hizmet Açıklaması <span asp-validation-for="Description" class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="Description" name="Description" placeholder="Hizmet Açıklaması Giriniz">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="ServiceIcon">
                                Hizmet İkonu<span asp-validation-for="ServiceIcon" class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="ServiceIcon" name="ServiceIcon" placeholder="Hizmet İconu Giriniz">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-8 ml-auto">
                                <button type="submit" class="btn btn-primary">Ekle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section ExtraScripts {
    <script src="~/adminweb/plugins/validation/jquery.validate.min.js"></script>
    <script src="~/adminweb/plugins/validation/jquery.validate-init.js"></script>
}
