@model CreateUserDto
@{
    ViewData["Title"] = "AddUser";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .custom-file-input:lang(en) ~ .custom-file-label::after {
        content: "Yükle" !important;
    }
</style>

<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="form-validation">
                    <form class="form-valide" method="post" enctype="multipart/form-data">
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="Name">
                                Ad <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Adınızı Giriniz">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="Surname">
                                Soyad <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="Surname" asp-for="Surname" placeholder="Soyadınızı Giriniz">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="City">
                                İl
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="City" asp-for="City" placeholder="İlinizi Giriniz">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="UserName">
                                Kullanıcı Adı <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="UserName" asp-for="UserName" placeholder="Kullanıcı Adını Giriniz">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="PasswordHash">
                                Şifre <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="password" class="form-control" id="PasswordHash" asp-for="PasswordHash" placeholder="Şifrenizi Giriniz">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="Email">
                                Email <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="email" class="form-control" id="Email" asp-for="Email" placeholder="Email Adresi Giriniz">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="PhoneNumber">
                                Telefon Numarası
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="PhoneNumber" asp-for="PhoneNumber" placeholder="10 Haneli Telefon Numarası Giriniz">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="Title">
                                Rolü <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                @Html.DropDownListFor(x=> x.AppRoleId, (List<SelectListItem>)ViewBag.AppUserRoles, new {@class = "form-control"})
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="ImageUrl">
                                Image Url
                            </label>
                            <div class="col-lg-6 input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Resim</span>
                                </div>
                                <div class="custom-file">
                                    <input type="file" id="Image" asp-for="Image" class="form-control custom-file-input">
                                    <label class="custom-file-label">Resim Seç</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-8 ml-auto">
                                <button type="submit" class="btn btn-primary">Ekle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section ExtraScripts {
    <script src="~/adminweb/plugins/validation/jquery.validate.min.js"></script>
    <script src="~/adminweb/plugins/validation/jquery.validate-init.js"></script>
}