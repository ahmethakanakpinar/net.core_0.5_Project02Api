@model List<ResultContactCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Rezervasyon</h4>
                <div class="table-responsive">
                    <table class="table header-border">
                        <thead>
                            <tr>
                                <th>Kategori</th>
                                <th>Kategori Adı</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ContactCategoryID</td>
                                    <td>@item.ContactCategoryName</td>
                                    <td>
                                        <a href="#" class="btn mb-1 btn-rounded btn-danger">Sil</a>
                                        <a href="#" class="btn mb-1 btn-rounded btn-dark">Düzenle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="#" class="btn btn-info">Yeni Kategori Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

